{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": false, // veri tipinin boolean sa booelan olmasını daha garanti yapar
    "module": "commonjs",
    "sourceMap": true,
    // allowJs = typescript içerisinde  javascript kullanmanizi saglar
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "target": "ES2016",
    "outDir": "dist",
    "rootDir": "src"
  }
}
