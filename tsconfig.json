{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": false, // veri tipinin boolean sa booelan olmasını daha garanti yapar
    "module": "CommonJS",
    // allowJs = typescript içerisinde  javascript kullanmanizi saglar
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src"
  }
}
